@model List<MyStudent.Models.Models.Class>

@{
    ViewData["Title"] = "Class List";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Class List</h2>

<p>
    <a href="@Url.Action("Add", "Class")" class="btn btn-success">Add New Class</a>
</p>

@if (Model == null || !Model.Any())
{
    <p class="text-danger text-center">No records found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cls in Model)
            {
                <tr>
                    <td>@cls.ClassID</td>
                    <td>@cls.ClassName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@cls.ClassID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@cls.ClassID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
