@model List<MyStudent.Models.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<h2>Students</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>RollNumber</th>
            <th>Class</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Count > 0)
    {
        foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.StudentName</td>
                <td>@student.RollNumber</td>
                <td>@student.Classes?.ClassName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.StudentID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4" class="text-center">No students found.</td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Add New Student</a>
