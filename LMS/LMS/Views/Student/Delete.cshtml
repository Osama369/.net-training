@model LMS.Models.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h4>Are you sure you want to delete this student?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.StudentName</dd>

    <dt class="col-sm-2">Roll Number</dt>
    <dd class="col-sm-10">@Model.RollNumber</dd>

    <dt class="col-sm-2">Class</dt>
    <dd class="col-sm-10">@Model.Classes?.ClassName</dd>

    <dt class="col-sm-2">Courses</dt>
    <dd class="col-sm-10">
        @if (Model.Course != null)
        {
            foreach (var course in Model.Course)
            {
                <span class="badge bg-danger text-light">@course.CourseTitle</span>
            }
        }
    </dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="StudentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
