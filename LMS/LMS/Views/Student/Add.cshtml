@model LMS.Models.Models.Student

@{
    ViewData["Title"] = "Add Student";
}

<h2>Add Student</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="StudentName"></label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

     <div class="form-group">
        <label asp-for="RollNumber"></label>
        <input asp-for="RollNumber" class="form-control" />
        <span asp-validation-for="RollNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Class</label>
        <select asp-for="ClassID" class="form-control" asp-items="ViewBag.ClassesList">
            <option value="">-- Select Class --</option>
        </select>
    </div>

    <div class="form-group">
    <label>Courses</label>
    <div>
        @foreach (var course in (List<SelectListItem>)ViewBag.CoursesList)
        {
            <div class="form-check">
                <input type="checkbox"
                       class="form-check-input"
                       name="SelectedCourseIds"
                       value="@course.Value"
                       id="course_@course.Value"
                       @(course.Selected ? "checked" : "") />

                <label class="form-check-label" for="course_@course.Value">
                    @course.Text
                </label>
            </div>
        }
    </div>
</div>



    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
