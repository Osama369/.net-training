@model List<LMS.Models.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h2>Students</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Student</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>RollNumber</th>
            <th>Class</th>
            <th>Courses</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.StudentName</td>
            <td>@student.RollNumber</td>
            <td>@student.Classes?.ClassName</td>
            <td>
                @if (student.Course != null)
                {
                    foreach (var course in student.Course)
                    {
                        <span class="badge bg-info text-dark">@course.CourseTitle</span>
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@student.StudentID" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
